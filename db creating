import sqlite3
import os.path
base = 'baza'
table_name = 'tabl'
con = sqlite3.connect(base)
cur = con.cursor()
def createDB():
    try:
        cur.execute(f"""CREATE TABLE IF NOT EXISTS {table_name} (
    name TEXT,
    surname TEXT,
    age INTEGER,
    phone INTEGER
)""")
    except sqlite3.Error as error:
        print("Ошибка при работе с SQLite", error)
    finally:
        if con:
            print("создана база\n" + base, 'с таблицей ' + table_name)
def insertInto():
    try:
        cur.execute(f"""INSERT INTO {table_name} VALUES('Маша', 'Иванова', '32', '1500')""")
        cur.execute(f"""SELECT * FROM {table_name}""")
        con.commit()
        rows = cur.fetchall()
        print(rows)
    except sqlite3.Error as error:
        print("Ошибка при работе с SQLite", error)
    finally:
        con.close()
createDB()
insertInto()
