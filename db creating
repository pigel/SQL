import sqlite3
base = 'baza'
table_name = 'tabl'
con = sqlite3.connect(base)
cur = con.cursor()
def createDB():
    try:
        cur.execute(f"""CREATE TABLE IF NOT EXISTS {table_name} (id INTEGER PRIMARY KEY AUTOINCREMENT, name TEXT, surname TEXT, age INTEGER, phone INTEGER)""")
    except sqlite3.Error as error:
        print("Ошибка при работе с SQLite", error)
def insertInto():
    name = input('имя?')
    surname = input('фамилия?')
    age = input('возраст?')
    phone = input('номер телефона?')
    try:
        cur.execute(f"""INSERT INTO {table_name} (name, surname, age, phone) VALUES('{name}', '{surname}', '{age}', '{phone}')""")
        cur.execute(f"""SELECT * FROM {table_name}""")
        con.commit()
        rows = cur.fetchall()
        print(rows)
    except sqlite3.Error as error:
        print("Ошибка при работе с SQLite", error)
    finally:
        con.close()
createDB()
insertInto()
